<mvc:View
    controllerName="ui5.imgeditor.controller.App"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:u="sap.ui.unified"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:f="sap.f"
>
    <App
        class="myAppDemoWT"
        id="app"
    >
        <pages>
            <Page title="Image Editor App">
                <content>
                    <IconTabBar
                        id="idIconTabBar"
                        headerBackgroundDesign="Transparent"
                        class="sapUiSmallMarginBottom sapUiResponsiveContentPadding"
                    >
                        <items>
                            <IconTabFilter
                                key="carousel"
                                text="Image Carousel"
                            >
                                <HBox>
                                    <u:FileUploader
                                        id="fileUploaderCarousel"
                                        typeMissmatch="typeMissmatch"
                                        change="onUploadAddImage"
                                        mimeType="image/*"
                                    />
                                    <Button
                                        text="SAVE ALL"
                                        press="onSaveAll"
                                        class="sapUiSmallMarginBegin"
                                    />
                                </HBox>
                                <HBox
                                    justifyContent="Center"
                                    renderType="Bare"
                                >
                                    <Panel
                                        id="carouselContainer"
                                        height="auto"
                                        backgroundDesign="Transparent"
                                    >
                                        <Carousel
                                            id="carouselSample"
                                            loop="true"
                                            class="sapUiContentPadding"
                                        >
                                            <customLayout>
                                                <CarouselLayout
                                                    visiblePagesCount="{settings>/pagesCount}"
                                                />
                                            </customLayout>
                                        </Carousel>
                                    </Panel>
                                </HBox>
                                <html:div
                                    id="imgContainer"
                                    class="sapUiEditorHeight"
                                />
                            </IconTabFilter>
                            <IconTabFilter
                                key="main"
                                text="Upload and Show Image"
                            >
                                <u:FileUploader
                                    id="myFileUploader"
                                    typeMissmatch="typeMissmatch"
                                    change="onUploadnShow"
                                    buttonOnly="true"
                                    mimeType="image/*"
                                />
                                <Panel id="myPanel" />
                            </IconTabFilter>
                        </items>
                    </IconTabBar>
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>
